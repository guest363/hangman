{
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": ".",
    "verbatimModuleSyntax": true,
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2020",
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
